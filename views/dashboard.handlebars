<!-- ROW FOR CALENDAR-->
<div class="row row-cols-1 p-1">
    <div class="col-12 d-flex flex-wrap justify-content-center">
        <div class="col-12 col-sm-12 col-md-6 d-flex flex-wrap justify-content-start align-items-center mt-2">
            <h1 class="dash-title text-start"><span><img class="dash-icon"
                        src="assets/images/calendar_logo.png"></span>My Calendar</h1>
        </div>
        <div class="col-12 col-sm-12 col-md-6 d-flex flex-wrap justify-content-end mt-2">
            <h2 id='date' class="dash-date col-12 text-end mt-3">{{display_date}}</h2>
            <span id="time" class="dash-time col-12 text-end"> </span>
        </div>
    </div>
    <div class="col-12 d-flex flex-wrap justify-content-center text-center p-1 m-1">
            <h3 class="user-welcome" data-user_id="{{user_id}}">Welcome back, {{user}}!</h3>
        </div>
    <div class="col-12 d-flex flex-wrap justify-content-center spacer border-bottom border-success">
        
    </div>
    <div class="col-12 mt-5 d-flex flex-wrap justify-content-center">
        {{!-- div that holds calendars --}}
        <div class="row row-cols-1 d-flex flex-wrap justify-content-center mini-bg">
            {{!-- div for mini-calendar --}}
            <div class="col-4 d-flex flex-wrap justify-content-center ">
                <div class="p-1 col-12 d-flex flex-wrap justify-content-center mini-cal-container">
                    {{!-- mini partial goes here --}}
                    <div
                        class="col-12  d-flex flex-wrap justify-content-center mini-container-width border border-secondary rounded-3 mt-2 bg-dark p-1 ">

                        <div class="col-12 d-flex flex-wrap justify-content-center">
                            <div class="col-6 text-center">
                                <h2 class="mini-month">
                                    May
                                </h2>
                                <h3 class="mini-year">
                                    21
                                </h3>
                            </div>
                        </div>

                        <div id="week-days"
                            class="row row-cols-7 mt-3 mb-3 col-12 d-flex flex-wrap justify-content-center text-center border-bottom border-secondary">
                            {{{render_week_days}}}
                        </div>

                        <div id="mini-row-1"
                            class="row row-cols-7 mt-3 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row1}}}
                        </div>

                        <div id="mini-row-2"
                            class="row row-cols-7 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row2}}}
                        </div>

                        <div id="mini-row-3"
                            class="row row-cols-7 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row3}}}
                        </div>

                        <div id="mini-row-4"
                            class="row row-cols-7 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row4}}}
                        </div>

                        <div id="mini-row-5"
                            class="row row-cols-7 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row5}}}
                        </div>

                        <div id="mini-row-6"
                            class="row row-cols-7 mb-3 col-12 d-flex flex-wrap justify-content-center text-center">
                            {{{render_mini_1 month.row6}}}
                        </div>

                    </div>
                    {{!-- end partial --}}
                </div>

            </div>
            {{!-- end div for mini-calendar --}}

            {{!-- div for calendar/daily/weekly/monthly--}}
            <div class="col-12 col-md-12 col-lg-8 d-flex flex-wrap justify-content-center">
                <div class="p-3 d-flex flex-wrap justify-content-center text-center">
                    {{!-- view partial goes here --}}
                    {{>calendar-views}}
                    {{!-- end partial --}}
                </div>
            </div>
            {{!-- end div for calendar --}}
        </div>
        {{!-- end div that holds calendars --}}
    </div>
</div>
<!-- END ROW FOR CALENDAR-->
