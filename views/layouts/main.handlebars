<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/styles/styles.css">
    <link rel="shortcut icon" href="assets/images/calendar_logo.png" type="image/x-icon">
    <title>My Calendar</title>
</head>

<body class="bg-dark">
    <!-- NAV Container -->
    <div class="container-fluid ">

        <!-- ROW FOR NAV -->
        <div class="row  border-bottom border-secondary">
            <div class="col">
                <!-- BEGIN NAV -->
                <ul class="nav justify-content-end my-3">
                    {{#unless loggedIn}}
                    <li class="nav-item">
                        <a class="nav-link nav-style" href="/">Home</a>
                    </li>
                    {{/unless}}
                    {{#if loggedIn}}
                    <li class="nav-item">
                        <a class="nav-link nav-style" href="/dashboard">Dashboard</a>
                    </li>
                    {{/if}}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle nav-style" data-bs-toggle="dropdown"
                            href="" role="button" aria-expanded="false">Calendar</a>
                        <ul class="dropdown-menu bg-dark">
                            <li><a class="dropdown-item nav-style bg-dark" href="">Monthly</a></li>
                            <li><a class="dropdown-item nav-style bg-dark" href="">Weekly</a></li>
                            <li><a class="dropdown-item nav-style bg-dark" href="">Daily</a></li>
                            <li>
                                <hr class="dropdown-divider text-white">
                            </li>
                            <li><a class="dropdown-item nav-style bg-dark" href="/create-task">Add Event</a></li>
                        </ul>
                    </li>
                    {{#unless loggedIn}}
                    <li class="nav-item">
                        <a class="nav-link nav-style" href="/login">Login</a>
                    </li>
                    {{/unless}}
                    {{#if loggedIn}}
                    <li class="nav-item">
                        <a class="nav-link nav-style" href="" id="logout">Logout</a>
                    </li>
                    {{/if}}
                </ul>
                <!-- END NAV -->
            </div>
        </div>
        <!-- END ROW FOR NAV -->

    </div>
    <!-- END NAV CONTAINER -->

    <div class="container d-flex flex-wrap justify-content-center">
        {{{body}}}
    </div>
    <!-- END MAIN CONTAINER -->



    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>
        
    {{#if loggedIn}}
    <script src="assets/javascript/utils/logout.js"></script>
    {{/if}}
</body>

</html>